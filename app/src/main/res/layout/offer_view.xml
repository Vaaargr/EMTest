<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/gap_132"
    android:layout_height="@dimen/gap_120"
    android:layout_marginEnd="@dimen/margin_8"
    android:background="@drawable/background_views">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/gap_32"
        android:layout_height="@dimen/gap_32"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_10"
        android:src="@drawable/ic_level_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_tv"
        style="@style/SimpleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_12"
        android:maxLines="2"
        android:text="@string/raise_resume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_iv" />

    <TextView
        android:id="@+id/button_tv"
        style="@style/SpecialText"
        android:text="@string/raise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>